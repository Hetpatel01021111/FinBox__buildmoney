{
  "name": "finbox-receipt-scanner",
  "version": "1.0.0",
  "description": "FinBox Receipt Scanner Desktop App",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder",
    "package-mac": "electron-builder --mac",
    "package-win": "electron-builder --win",
    "package-linux": "electron-builder --linux"
  },
  "author": "FinBox",
  "license": "MIT",
  "devDependencies": {
    "canvas": "^3.1.0",
    "electron": "^28.0.0",
    "electron-builder": "^24.6.4"
  },
  "dependencies": {
    "electron-store": "^8.1.0",
    "form-data": "^4.0.0",
    "node-fetch": "^3.3.2"
  },
  "build": {
    "appId": "com.finbox.receipt-scanner",
    "productName": "FinBox Receipt Scanner",
    "mac": {
      "category": "public.app-category.finance",
      "icon": "assets/icon.icns"
    },
    "win": {
      "icon": "assets/icon.ico"
    },
    "linux": {
      "icon": "assets/icon.png"
    }
  }
}
